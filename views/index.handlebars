
  <div class = "row text-center">
    <h1>News Scraper</h1>
    <h2><i>Get it while it's hot!</i></h2>
    <button id = "scrape" class="btn btn-normal">Click to get news article headlines</button>
  </div>
    {{!--<div id="articles"></div>
    <div id="notes"></div>--}}
    <div class = "row">
      <div class="col-md-12">
        <ul class="list-group">
            {{#each articles}}
                <li class="list-group-item">
                  <p class = "" ><a id = "{{articleId}}" href="{{this.link}}">{{this.title}}</span></a> <button class="btn btn-info saver">Save article</button>  
                    <button type="button" class="btn btn-info btn-sm" id="addNote">Add Note</button>
                    <button type="button" class="btn btn-info  btn-sm" data-toggle="modal" data-target="#seeNotes">See Notes</button>
                    <button type="button" class="btn btn-danger btn-sm" id ="removeNotes">Remove Notes</button>                 
                  </p>
                </li>
            {{/each}}
          </ul>
        </div>
    </div>

<!-- Modal -->
<div id="seeNotes" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div id = "modal-body" class="modal-body">
        <p>Some text in the modal.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

    <script src="/js/app.js"></script>
